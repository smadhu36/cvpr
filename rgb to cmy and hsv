import cv2
import numpy as np
import matplotlib.pyplot as plt

def rgb_to_cmy(image):
    cmy_image = 1 - image / 255.0
    return cmy_image

def rgb_to_hsv(image):
    hsv_image = cv2.cvtColor(image, cv2.COLOR_BGR2HSV)
    return hsv_image

def display_images(original, cmy_image, hsv_image):
    original_rgb = cv2.cvtColor(original, cv2.COLOR_BGR2RGB)
    cmy_rgb = cv2.cvtColor((cmy_image * 255).astype(np.uint8), cv2.COLOR_BGR2RGB)
    hsv_rgb = cv2.cvtColor(hsv_image, cv2.COLOR_BGR2RGB)

    plt.figure(figsize=(12, 4))

    plt.subplot(1, 3, 1)
    plt.imshow(original_rgb)
    plt.title('Original RGB Image')
    plt.axis('off')

    plt.subplot(1, 3, 2)
    plt.imshow(cmy_rgb)
    plt.title('CMY Image')
    plt.axis('off')

    plt.subplot(1, 3, 3)
    plt.imshow(hsv_rgb)
    plt.title('HSV Image')
    plt.axis('off')

    plt.show()

# Usage example
image = cv2.imread('flower.jpg')
cmy_image = rgb_to_cmy(image)
hsv_image = rgb_to_hsv(image)
display_images(image, cmy_image, hsv_image)
